<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/llDialog"
              android:layout_gravity="center"
              android:background="@drawable/dialog_shape_bg_white_radius_15dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_dp_20"
        android:paddingRight="@dimen/space_dp_15"
        android:paddingLeft="@dimen/space_dp_15"
        android:gravity="center"
        android:text="@string/common_tips_text"
        android:visibility="visible"
        android:textColor="@color/black_777777"
        android:textSize="@dimen/textsize_16"/>

    <TextView
        android:id="@+id/tvDialogContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="@dimen/space_dp_15"
        android:paddingLeft="@dimen/space_dp_15"
        android:paddingBottom="@dimen/space_dp_40"
        android:paddingTop="@dimen/space_dp_35"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/textsize_18"/>

    <View
        style="@style/view_h_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_dp_46"
        android:background="@drawable/shape_bg_gradient_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDialogCancle"
            style="@style/tv_dialog_style"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/gray_e1e1e1"
            android:textSize="@dimen/textsize_17"/>

        <View
            style="@style/view_v_line"/>

        <TextView
            android:id="@+id/tvDialogSure"
            style="@style/tv_dialog_style"
            android:layout_weight="1"
            android:text="@string/sure"
            android:textColor="@color/selector_text_white_to_gray1"
            android:textSize="@dimen/textsize_18"/>

    </LinearLayout>

</LinearLayout>